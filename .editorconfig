# EditorConfig for ESP32 Fish Tank Automation
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ino]
indent_style = space
indent_size = 2

[*.h]
indent_style = space
indent_size = 2

[*.cpp]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 100

[*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2